<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="Thêm Sách Mới"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtBookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên Sách"
                android:padding="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPublishDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngày Xuất Bản (dd/MM/yyyy)"
                android:padding="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#6200EE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thể Loại"
                android:padding="18dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:id="@+id/spinnerAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn tác giả"
            android:padding="18dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lưu Sách"
            app:backgroundTint="#6200EE"
            app:cornerRadius="8dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>